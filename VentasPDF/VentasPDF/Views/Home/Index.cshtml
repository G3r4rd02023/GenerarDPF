@model IEnumerable<VentasPDF.Models.DetallesVenta>
@{
    ViewData["Title"] = "Home Page";
}

<div class=" col-md-12">
    <div class=" card">
        <div class=" card-header text-center">
            <h5>Ventas</h5>
        </div>
        <div card-body>
            <table class="table table-stripped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Producto</th>
                        <th scope="col">Cliente</th>
                        <th scope="col">Cantidad</th>
                        <th scope="col">Fecha</th>
                        <th scope="col">Total</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.IdDetalleVenta</th>
                            <td>@Html.DisplayFor(modelItem => item.IdProductoNavigation!.Descripcion)</td>
                            <td>@Html.DisplayFor(modelItem => item.IdVentaNavigation!.Cliente)</td>
                            <td>@Html.DisplayFor(modelItem => item.Cantidad)</td>
                            <td>@Html.DisplayFor(modelItem => item.IdVentaNavigation!.Fecha)</td>
                            <td>@Html.DisplayFor(modelItem => item.Total)</td>
                            <td>
                                <a asp-action="GenerarPdf" asp-route-id="@item.IdDetalleVenta" class="btn btn-success">Generar Factura</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
